@*@CustomerCode*@
@model QTPriceChecker.AspMvc.Models.App.PriceHistory

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <input asp-for="ProductXSupplierId" type="hidden" />
        <div class="form-group">
            <label asp-for="ProductText" class="control-label"></label>
            <input asp-for="ProductText" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="SupplierText" class="control-label"></label>
            <input asp-for="SupplierText" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="From" class="control-label"></label>
            <input asp-for="From" class="form-control" />
            <span asp-validation-for="From" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
</div>
